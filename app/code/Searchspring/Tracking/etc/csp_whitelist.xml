<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="searchspring_host" type="host">https://cdn.searchspring.net/intellisuggest/is.min.js</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="searchspring_beacon" type="host">https://beacon.searchspring.io/beacon</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="searchspring_img" type="host">*.cloudfront.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
